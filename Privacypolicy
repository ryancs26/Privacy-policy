    <!-- PRIVACY POLICY -->
    <section class="policy-wrap" id="policy" aria-labelledby="policy-heading">
      <div class="policy-card">
        <div class="policy-icon" aria-hidden="true">
          <svg viewBox="0 0 24 24" width="36" height="36" role="img" focusable="false" aria-hidden="true">
            <path d="M12 2l7 3v6c0 5-3.8 9.9-7 11-3.2-1.1-7-6-7-11V5l7-3z" fill="currentColor"/>
